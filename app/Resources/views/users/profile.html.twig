{% block body %}

    <h1>Hello {{ user.email }}</h1>

    <h3>{{ user.fullName }}</h3>
    <br>
    <div><img class="rounded-circle" src="{{ asset('uploads/images/users/' ~ user.image) }}" width="150" height="75">
    </div>
    <br>
    <a href="{{ path("user_edit_profile") }}" class="btn btn-success btn-sm">Edit Profile</a>
    <br>
    <br>
    <p>
    <a href="{{ path('user_mailbox') }}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-envelope"></span>{{ msg|length }} New Messages
    </a>
    </p>
{% endblock %}