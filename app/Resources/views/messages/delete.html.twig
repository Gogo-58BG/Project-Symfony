{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('message_delete', {id: message.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Message</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="message_about">Message About</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="message_about" placeholder="Message About"
                                   name="message[about]" value="{{ message.about }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="message_content">Content</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="message_content"
                                  name="message[content]" disabled>{{ message.content }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_mailbox') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}